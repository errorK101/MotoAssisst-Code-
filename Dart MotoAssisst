import 'package:flutter/material.dart';

void main() {
  runApp(MotoAssistApp());
}

// Define common colors and styles
const Color _kTealColor = Color(0xFF4DD0D0);

InputDecoration _appInputDecoration({
  required String hintText,
  Widget? suffixIcon,
  int? maxLines,
}) {
  return InputDecoration(
    hintText: hintText,
    hintStyle: const TextStyle(color: _kTealColor), // Hint text color from image
    filled: false, // Not filled, as per image
    border: OutlineInputBorder(
      borderRadius: BorderRadius.circular(5.0), // Smaller border radius from image
      borderSide: const BorderSide(color: _kTealColor, width: 2.0), // Teal border from image
    ),
    focusedBorder: OutlineInputBorder( // Ensure focused state also has teal border
      borderRadius: BorderRadius.circular(5.0),
      borderSide: const BorderSide(color: _kTealColor, width: 2.0),
    ),
    enabledBorder: OutlineInputBorder( // Ensure enabled state also has teal border
      borderRadius: BorderRadius.circular(5.0),
      borderSide: const BorderSide(color: _kTealColor, width: 2.0),
    ),
    contentPadding: const EdgeInsets.symmetric(horizontal: 15, vertical: 12), // Adjusted padding
    suffixIcon: suffixIcon,
  );
}

ButtonStyle _appButtonStyle({
  Color? backgroundColor,
  Color? foregroundColor,
  double? minimumWidth,
  double? height,
  TextStyle? textStyle,
}) {
  return ElevatedButton.styleFrom(
    backgroundColor: backgroundColor ?? _kTealColor,
    foregroundColor: foregroundColor ?? Colors.white,
    shape: RoundedRectangleBorder(
      borderRadius: BorderRadius.circular(30),
    ),
    minimumSize: minimumWidth != null && height != null
        ? Size(minimumWidth, height)
        : null,
    textStyle: textStyle ??
        const TextStyle(fontSize: 16, fontWeight: FontWeight.bold),
  );
}

class MotoAssistApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'MotoAssist',
      theme: ThemeData(
        primarySwatch: Colors.deepOrange,
        appBarTheme: const AppBarTheme(
          backgroundColor: Colors.white, // White app bar background
          foregroundColor: Colors.black, // Dark icons/text on app bar
          elevation: 0, // No shadow for app bar
        ),
      ),
      home: LoginPage(),
    );
  }
}

// ===========================================================
// LOGIN PAGE
// ===========================================================

class LoginPage extends StatelessWidget {
  final TextEditingController email = TextEditingController();
  final TextEditingController pass = TextEditingController();

  LoginPage({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.white,
      body: SafeArea(
        child: SingleChildScrollView(
          child: Padding(
            padding: const EdgeInsets.symmetric(horizontal: 30.0, vertical: 40),
            child: Column(
              children: [
                // LOGO PLACEHOLDER
                Container(
                  width: 180,
                  height: 180,
                  decoration: BoxDecoration(
                    color: Colors.grey.shade200,
                    borderRadius: BorderRadius.circular(20),
                  ),
                  child: const Center(
                    child: Text(
                      'MOTOASSIST\nRescue on the go',
                      textAlign: TextAlign.center,
                      style:
                          TextStyle(fontSize: 16, fontWeight: FontWeight.w600),
                    ),
                  ),
                ),

                const SizedBox(height: 30),

                const Text(
                  'LOGIN TO YOUR ACCOUNT',
                  style: TextStyle(fontSize: 16, fontWeight: FontWeight.bold),
                ),

                const SizedBox(height: 25),

                // EMAIL FIELD
                TextField(
                  controller: email,
                  decoration: _appInputDecoration(
                    hintText: 'EMAIL',
                  ),
                ),

                const SizedBox(height: 15),

                // PASSWORD FIELD
                TextField(
                  controller: pass,
                  obscureText: true,
                  decoration: _appInputDecoration(
                    hintText: 'PASSWORD',
                  ),
                ),

                const SizedBox(height: 30),

                // SIGN IN BUTTON
                SizedBox(
                  width: double.infinity,
                  height: 50,
                  child: ElevatedButton(
                    style: _appButtonStyle(),
                    onPressed: () {
                      Navigator.push(
                        context,
                        MaterialPageRoute<HomePage>(
                            builder: (_) => HomePage()),
                      );
                    },
                    child: const Text(
                      "SIGN IN",
                      style: TextStyle(
                          fontSize: 16,
                          fontWeight: FontWeight.bold,
                          color: Colors.white),
                    ),
                  ),
                ),

                const SizedBox(height: 15),

                // YOU DON'T HAVE? SIGN UP
                Row(
                  mainAxisAlignment: MainAxisAlignment.center,
                  children: [
                    const Text("YOU DON'T HAVE?  "),
                    GestureDetector(
                      onTap: () {
                        Navigator.push(
                          context,
                          MaterialPageRoute<RoleChoicePage>(
                              builder: (_) => RoleChoicePage()),
                        );
                      },
                      child: const Text(
                        "SIGN UP",
                        style: TextStyle(
                          color: _kTealColor,
                          fontWeight: FontWeight.bold,
                          decoration: TextDecoration.underline,
                        ),
                      ),
                    ),
                  ],
                ),

                const SizedBox(height: 25),
              ],
            ),
          ),
        ),
      ),
    );
  }
}

